-SUPPORTED_TARGETS:=pluto sidekiqz2
+SUPPORTED_TARGETS:=pluto sidekiqz2 ant
 
 # Include target specific constants
 include scripts/$(TARGET).mk
@@ -96,13 +96,17 @@ build/uboot-env.bin: build/uboot-env.txt
